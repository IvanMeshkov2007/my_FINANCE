<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWasteActivity"
    android:padding="10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/Waste_date_TV"
        app:layout_constraintTop_toBottomOf="@id/Waste_sum_ED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата траты"
        android:textSize="25sp"
        android:padding="10sp"/>
    <TextView
        android:id="@+id/Waste_name_TV"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На что потрачено"
        android:textSize="25sp"
        android:padding="10sp"

        />
    <EditText
        android:id="@+id/Waste_name_ED"
        app:layout_constraintTop_toBottomOf="@+id/Waste_name_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="Введите на что потратили деньги"
        />
    <TextView
        android:id="@+id/Waste_sum_TV"
        app:layout_constraintTop_toBottomOf="@+id/Waste_name_ED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сколько потрачено"
        android:textSize="25sp"
        android:padding="10sp"

        />
    <EditText
        android:id="@+id/Waste_sum_ED"
        app:layout_constraintTop_toBottomOf="@+id/Waste_sum_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="Введите сумму"
        />
    <CalendarView
        android:id="@+id/Waste_Calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/Waste_SAve_Btn"
        app:layout_constraintTop_toBottomOf="@+id/Waste_date_TV"/>

    <Button
        android:id="@+id/Waste_SAve_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Сохранить"
        android:textSize="40sp"
        android:layout_margin="20sp"/>






</androidx.constraintlayout.widget.ConstraintLayout>